<UserControl x:Class="IncomeControls.Views.IncomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IncomeControls.Views"
             xmlns:res="clr-namespace:IncomeControls.Properties"
             xmlns:conv="clr-namespace:WPFHelper.Converters;assembly=WPFHelper"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel
            Grid.Row="0"
            Orientation="Horizontal">
            <RadioButton  
                Width="Auto"
                Command="{Binding Path=AddIncomeCommand}"
                Content="Добавить доход"
                BorderBrush="White" 
                BorderThickness="0.5"
                Foreground="White"
                Style="{StaticResource MenuStartButtonTheme}"/>
            <RadioButton
                Width="Auto"
                Command="{Binding Path=DeleteCommand}"
                Content="Удалить доход"
                BorderBrush="White" 
                BorderThickness="0.5"
                Foreground="White"
                Style="{StaticResource MenuStartButtonTheme}"/>
            <RadioButton
                Width="Auto"
                Command="{Binding Path=EditorCommand}"
                Content="Изменить доход"
                BorderBrush="White" 
                BorderThickness="0.5"
                Foreground="White"
                Style="{StaticResource MenuStartButtonTheme}"/>
        </StackPanel>
        
        <ListView 
            Grid.Row="1"
            ItemsSource="{Binding Path=Items}" 
            SelectedItem="{Binding Path=SelectedItem}"
            Background="#6787CB"
            ScrollViewer.HorizontalScrollBarVisibility="Visible">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="200" Header="{x:Static res:Resources.Name}">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=Name}"
                                           Foreground="White"
                                           FontSize="13"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Width="200" Header="Категория">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=TypeName}"
                                           Foreground="White"
                                           FontSize="13"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    
                    <GridViewColumn Width="200" Header="{x:Static res:Resources.Amount}">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=Amount}"
                                           Foreground="LawnGreen"
                                           HorizontalAlignment="Center"
                                           FontSize="14"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Width="150" Header="Дата дохода">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=CreateDate, StringFormat=dd.MM.yyyy}"
                                           Foreground="White"
                                           FontSize="13"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        
        
        <local:IncomeEditorView
            Grid.Row="2"
            Visibility="{Binding Path=DataContext.VisibleEditorIncome,
                        Converter={x:Static conv:BoolToVisible.Instance},RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}"
            DataContext="{Binding Path=Editor}"
        />

    </Grid>
</UserControl>
