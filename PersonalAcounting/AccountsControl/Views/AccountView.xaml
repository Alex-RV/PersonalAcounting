<UserControl x:Class="AccountControl.Views.AccountView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AccountControl.Views"
             xmlns:res="clr-namespace:AccountControl.Properties"
             xmlns:localI="clr-namespace:IncomeControls.Views;assembly=IncomeControls"
             
             xmlns:conv="clr-namespace:WPFHelper.Converters;assembly=WPFHelper"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="Button">
            <Style.Setters>
                <Setter Property="Margin" Value="-1"/>
                <Setter Property="Padding" Value="5,0"/>
                <Setter Property="Background" Value="White"/>
                <Setter Property="BorderBrush" Value="Gray"/>
            </Style.Setters>
        </Style>
    </UserControl.Resources>
    <Border Background="#07021c"
            CornerRadius="25">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock     Text="Счет"
                       Grid.Row="0"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Foreground="White"
                       FontSize="30"
                       Margin="20,0,0,0"/>

            <Expander
            Grid.Column="0"
            Grid.Row="1"
            IsExpanded="True">
                <Border
                BorderBrush="Gray"
                BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <StackPanel>
                            <RadioButton 
                        Command="{Binding Path=IncomeCommand}"
                        Content="{x:Static res:Resources.Income}"
                        Height="50"
                        Foreground="White"
                        FontSize="22"
                        Style="{StaticResource MenuButtonTheme}"
                        />

                            <RadioButton
                        Command="{Binding Path=CostCommand}"
                        Content="{x:Static res:Resources.Costs}"
                        Height="50"
                        Foreground="White"
                        FontSize="22"
                        Style="{StaticResource MenuButtonTheme}"/>

                            <RadioButton
                        Command="{Binding Path=AccountShortCommand}"
                        Content="{x:Static res:Resources.InfoAccount}"
                        Height="50"
                        Foreground="White"
                        FontSize="22"
                        Style="{StaticResource MenuButtonTheme}"/>

                        </StackPanel>
                        
                        <RadioButton
                        Grid.Row="1"
                        Command="{Binding Path=ExitCommand}"
                        Content="{x:Static res:Resources.Exit}"
                        Height="50"
                        Foreground="White"
                        FontSize="22"
                        Style="{StaticResource MenuStartButtonTheme}"/>
                    </Grid>

                </Border>

            </Expander>
            <Grid 
            Grid.Column="1"
            Grid.Row="1">
                <local:AccountShortView
                Visibility="{Binding Path=VisibleShortView, Converter={x:Static conv:BoolToVisible.Instance}}"/>

                <localI:IncomeView
                DataContext="{Binding Path=Income}"
                Visibility="{Binding 
                Path=DataContext.VisibleIncomeView, 
                Converter={x:Static conv:BoolToVisible.Instance},
                RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}"/>

            </Grid>

        </Grid>


    </Border>
    
</UserControl>
